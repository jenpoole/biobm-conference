
<div class="container">
    <h2>Test for Carousel loop</h2>
    <% @events.limit(3).each do |event| %>
        <h3><%= event.name %></h3>
    <% end %>
</div>

<!-------------CAROUSEL--------------------->

<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
    <div class="item active">
      <img src="img1.jpg" alt="">
      <div class="carousel-caption">
        <h1>Event Title</h1>
        <h3>Month, Date, Year | Location</h3>
        <p>Countdown to Event date</p>
        
        <button type="button" class="btn btn-info">Register Now</button> &nbsp;
        <button type="button" class="btn btn-info">View Details</button>
      </div>
    </div>
    
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<!-------------QUICK SEARCH--------------------->

<div class="" style="padding-top: 25px; padding-bottom: 15px; margin-bottom: 50px; background: #007CC3;">
    
        <div class="col-md-2" style="border-right: 2px solid black; background: #007CC3;">
            <p>Find <br> Event or Conference</p>
        </div>
        
        <div class="col-md-10" style="padding-top: 10px; padding-bottom: 11px; background: #007CC3;">
            <form class="form-inline">
              
              <div class="form-group">
                <label for="event-type"></label>
                <input type="text" class="form-control" id="event-type" placeholder="keyword">
              </div>
              
              <div class="form-group">
                <label for="location"></label>
                <input type="text" class="form-control" id="location" placeholder="location">
              </div>
              
              <div class="form-group">
                <label for="date"></label>
                <input type="text" class="form-control" id="date" placeholder="date">
              </div>
         
              <button type="submit" class="btn btn-default">Find Event</button>
            </form>
        </div>
    
</div>

<!-------------FEATURED EVENTS / POPULAR EVENTS--------------------->

<div class="" style="padding-top: 25px; padding-bottom: 25px">
    <div class="container">
        <ul class="nav nav-pills nav-justified">
          <li role="presentation" class="active"><a href="#profile">Upcoming Events</a></li>
          <li role="presentation"><a href="#messages">Popular Events</a></li>
          <li role="presentation"><a href="#settings">Saved Events</a></li>
        </ul>
      
    </div> <!-- .container -->
</div>


<!--Upcoming-->
<div class="" style="padding-bottom: 20px;">
    <div class="container">
      <% @events.limit(9).upcoming.each do |event| %>
        <div class="col-md-4" style="text-align: center; margin-bottom: 20px;">
            <img src="img1.jpg" alt="" style="width: 100%;">
            
            <h3><%= link_to event.name, event_path(event) %></h3>
            <p style="padding: 5px;"><%= truncate(event.description, length: 140, separator: ' ') %></p>
            <div class="row" style="padding: 15px;">
                <div class="col-xs-4"><i class="fa fa-heart-o fa-2x" aria-hidden="true"></i></div>
                <div class="col-xs-4"><button type="button" class="btn btn-lg btn-success">Register</button></div>
                <div class="col-xs-4"><i class="fa fa-envelope-o fa-2x" aria-hidden="true"></i></div>
            </div>
        </div>
      <% end %>  
    </div>
</div>

