<!-------------CAROUSEL--------------------->

  <div id="myCarousel" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
    <div class="item active">
      <%= image_tag("featured_event_bg.jpg", class: "carousel-img") %>
      <div class="container">
        <div class="carousel-caption">
          <h1>Featured Event</h1>
          <br>
          <p><button type="button" class="btn btn-success">Join Event</button> &nbsp; <button type="button" class="btn btn-default">View Details</button></p>
        </div>
      </div>
    </div>

    <div class="item">
      <%= image_tag("company_ad_bg.jpg", class: "carousel-img") %>
      <div class="container">
        <div class="carousel-caption">
          <h1>Company Advertisement</h1>
        </div>
      </div>
    </div>
  </div>

  <!-- Left and right controls -->
  <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>


<!-------------QUICK SEARCH--------------------->

<div class="search-section">
  <div class="container">
    <h3 class="col-md-12">Find an Event or Conference</h3>
    <%= render 'events/quick_search' %>
  </div>
</div>

<!-------------FEATURED EVENTS / POPULAR EVENTS--------------------->

<div class="section">
    <div class="container">
        <ul class="nav nav-pills nav-justified">
          <li role="presentation" class="active"><a href="#profile">Upcoming Events</a></li>
          <li role="presentation" class="disabled"><a href="#messages">Popular Events</a></li>
          <li role="presentation" class="disabled"><a href="#settings">Saved Events</a></li>
        </ul>
      
    </div> <!-- .container -->
</div>

<!--Upcoming-->
<div class="">
    <div class="container">
      <% @events.limit(9).upcoming.each do |event| %>
        <div class="col-md-4 center event-listing event-listing-feature">
            <!--Event Image-->
            <% if event.image? %>
              <%= image_tag(event.image.url, size: "350x180") %>
            <% else %>
              <%= image_tag("default_event_img.jpg") %>
            <% end %>
            
            <h3><%= link_to event.name, event_path(event) %></h3>
            <p class="pad5"><%= truncate(event.description, length: 120, separator: ' ') %></p>
            <div class="row pad15">
                <div class="col-xs-2"><i class="fa fa-heart-o fa-2x" aria-hidden="true"></i></div>
                <div class="col-xs-8"><%= register_link(event) %></div>
                <div class="col-xs-2"><i class="fa fa-envelope-o fa-2x" aria-hidden="true"></i></div>
            </div>
        </div>
      <% end %>  
    </div>
</div>

