<div class="container">
<h2>Sign up for a new account</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  
  <%= devise_error_messages! %>
  
  <div class="field">
    <%= f.label :first_name, "First Name", class: "control-label" %><br />
    <%= f.text_field :first_name, class: "form-control", autofocus: true  %>
  </div>
  
  <div class="field">
    <%= f.label :last_name, "Last Name", class: "control-label" %><br />
    <%= f.text_field :last_name, class: "form-control" %>
  </div>
  
  <div class="field">
    <%= f.label :company, "Company", class: "control-label" %><br />
    <%= f.text_field :company, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :email, "Company Email", class: "control-label" %><br />
    <%= f.email_field :email, class: "form-control"%>
  </div>
  
  <div class="field">
    <%= f.label :country, "Country", class: "control-label" %><br />
    <%= f.text_field :country, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "control-label" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: "control-label" %><br />
    <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "off" %>
  </div>
  
  <div>
      <%= f.label :join_email_list, "Join our email list?", class: "control-label" %> <br>
      <%= f.select :join_email_list, User::JOIN_EMAIL_LIST_OPTIONS, class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-success" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
