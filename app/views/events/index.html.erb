
<!-------------SEARCH FILTERS--------------------->
    
<div class="search-section"> 
    <div class="container">
        <h1 class="col-md-12">Search Events</h1>
        
        <%= render 'search' %>
    </div>
</div>
    
<!-------------EVENTS & SEARCH RESULTS--------------------->

<div class="section">
    <div class="container">
      
      <div class="col-md-12">
        <!-- # of results returned-->
        <p><strong><%= pluralize(@events.upcoming.size, 'Result') %></strong></p>
        
        <!--display selected filters-->
        <!--<p><strong>Filters:</strong> None, location, date, etc. </p>-->
      </div>
      
        <% @events.upcoming.each do |event| %>
            <div class="col-md-4 center event-listing">
                <!--Event Image-->
                <% if event.image? %>
                  <%= image_tag(event.image.url, size: "350x180") %>
                <% else %>
                  <%= image_tag("default_event_img.jpg") %>
                <% end %>
      
                <!--Event Title-->
                <h3><%= link_to event.name, event_path(event) %></h3>
                
                <!--Event Location-->
                <p><%= event.location %></p>
                
                <!--Event Date-->
                <p><%= event.starts_at %></p>
                
                <!--Event Description-->
                <p class="pad5"><%= truncate(event.description, length: 120, separator: ' ') %></p>
                
                <!--Save Event, Register for Event, Contact Organizer-->
                <div class="row pad15">
                    <div class="col-xs-2"><i class="fa fa-heart-o fa-2x" aria-hidden="true"></i></div>
                    
                    <div class="col-xs-8">
                        <%= register_link(event) %>
                    </div>
                    
                    <div class="col-xs-2"><i class="fa fa-envelope-o fa-2x" aria-hidden="true"></i></div>
                </div>
            </div>
        <% end %>
      
        
    </div>
</div>

<!-------------PAGINATION--------------------->
<div class="container center">
  <%= paginate @events, theme: "twitter-bootstrap-3" %>
</div>
