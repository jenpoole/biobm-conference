<!-------------EVENTS & SEARCH RESULTS--------------------->

<div class="" style="margin-top: 50px; padding-bottom: 20px;">
    <div class="container">
      
      <div class="col-md-12" style="padding-top: 15px; padding-bottom: 15px;">
        <!-- # of results returned-->
        <p><strong><%= pluralize(@events.size, 'Result') %></strong></p>
        
        <!--display selected filters-->
        <p><strong>Filters:</strong> None, location, date, etc. </p>
      </div>
      
        <% @events.each do |event| %>
            <div class="col-md-4" style="text-align: center; margin-bottom: 20px;">
                <!--Event Image-->
                <img src="" alt="event image" style="width: 100%;">
                
                <!--Event Title-->
                <h3><%= event.name %></h3>
                
                <!--Event Location-->
                <p><%= event.location %></p>
                
                <!--Event Price-->
                <p><%= format_price(event) %></p>
                
                <!--Event Date-->
                <p><%= event.starts_at %></p>
                
                <!--Event Description-->
                <p style="padding: 5px;"><%= truncate(event.description, length: 140, separator: ' ') %></p>
                
                <!--Save Event, Register for Event, Contact Organizer-->
                <div class="row" style="padding: 15px;">
                    <div class="col-xs-4"><i class="fa fa-heart-o fa-2x" aria-hidden="true"></i></div>
                    <div class="col-xs-4"><button type="button" class="btn btn-lg btn-success">Register</button></div>
                    <div class="col-xs-4"><i class="fa fa-envelope-o fa-2x" aria-hidden="true"></i></div>
                </div>
            </div>
        <% end %>
      
        
    </div>
</div>

