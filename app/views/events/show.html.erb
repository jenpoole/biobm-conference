<!-------------JUMBOTRON--------------------->

<% if @event.image? %>
 
<div class="jumbotron" style="background-image: url(<%= @event.image %>);">
    <div class="container">
        <h1><%= @event.name %></h1>
        
        <p><%= register_link(@event) %></p>
    </div>
    
    <div class="center quick-info">
        <div class="container">
            <div class="col-md-4">Date: <%= @event.starts_at %></div>
            <div class="col-md-4">Location: <%= @event.location %></div>
            <div class="col-md-4"><%= pluralize(@event.spots_available, 'Spot') %> Available</div>
        </div>
    </div>
</div>

<% else %>

<div class="jumbotron" style="background-image: url(<%= image_path 'default_event_img.jpg' %>)">
    <div class="container">
        <h1><%= @event.name %></h1>
        
        <p><%= register_link(@event) %></p>
    </div>
    
    <div class="center quick-info">
        <div class="container">
            <div class="col-md-4">Date: <%= @event.starts_at %></div>
            <div class="col-md-4">Location: <%= @event.location %></div>
            <div class="col-md-4"><%= pluralize(@event.spots_available, 'Spot') %> Available</div>
        </div>
    </div>
</div>

<% end %>
    
    
<!-------------FULL EVENT INFO--------------------->

<div class="section center">
