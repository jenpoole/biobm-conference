<%= form_for (@event), :html => {:class => "form-horizontal"} do |f| %>

    <%= render 'shared/errors', object: @event %>
    
    <div>
        <%= f.label :name, class: "control-label" %>
        <%= f.text_field :name, class: "form-control" %>
    </div>
    
    <div>
        <%= f.label :description, class: "control-label"%>
        <%= f.text_area :description, cols: 100, rows: 10, class: "form-control" %>
    </div>
    
    <div>
        <%= f.label :location, class: "control-label" %>
        <%= f.text_field :location, class: "form-control" %>
    </div>
   
    <div>
        <%= f.label :price, class: "control-label" %> 
        <%= f.number_field :price, class: "form-control" %>
    </div>

    <p><strong>Date & Time</strong></p>
    <div class="input-group date col-md-12" id="datetimepicker1">
        <%= f.text_field :starts_at, class: "form-control" %>
        <span class="input-group-addon"><i class="fa fa-calendar" aria-hidden="true"></i></span>
    </div>
    
    <div>
        <%= f.label :capacity, class: "control-label" %> <br>
        <%= f.number_field :capacity, class: "form-control" %>
    </div>
    
    <div>
        <%= f.submit class: "btn btn-success" %>
        <%= link_to "Cancel", events_path, class: "btn btn-danger" %>
    </div>

<% end %>

<script>
    $(function () {
        $('#datetimepicker1').datetimepicker();
    });
</script>