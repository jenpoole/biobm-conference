<div class="container">
    <h1>Registrations for <%= link_to @event.name, event_path(@event) %> </h1>
    
    <table class="table">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
      </tr>
    </thead>
    <tbody>
      <% @registrations.each do |r| %>    
          <tr>
            <td><%= r.first_name %></td>
            <td><%= r.last_name %></td>
            <td><%= r.email %></td>
          </tr>
      <% end %>
    </tbody>
  </table>
</div>